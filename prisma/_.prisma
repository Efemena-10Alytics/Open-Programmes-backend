// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// prisma/schema.prisma
datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  relationMode = "foreignKeys"
}

enum UserRole {
  ADMIN
  COURSE_ADMIN
  USER
}

enum PaymentStatusType {
  COMPLETE
  BALANCE_HALF_PAYMENT
  PENDING_SEAT_CONFIRMATION
  EXPIRED
}

model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model VerificationToken {
  id      String   @id @default(cuid())
  email   String
  token   String   @unique
  expires DateTime

  @@unique([email, token])
}

model PasswordResetToken {
  id      String   @id @default(cuid())
  email   String
  token   String   @unique
  expires DateTime

  @@unique([email, token])
}

model PaymentInstallment {
  id                String        @id @default(cuid())
  paymentStatusId   String
  paymentStatus     PaymentStatus @relation(fields: [paymentStatusId], references: [id])
  amount            Float
  dueDate           DateTime
  paid              Boolean       @default(false)
  installmentNumber Int
  lastReminderSent  DateTime?
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt
}

model PaymentStatus {
  id                   String                @id @default(cuid())
  status               PaymentStatusType
  courseId             String
  paymentType String?  
  paymentPlan String?
  course               Course                @relation(fields: [courseId], references: [id])
  cohortId             String?
  cohort               Cohort?               @relation(fields: [cohortId], references: [id])
  userId               String
  user                 User                  @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt            DateTime              @default(now())
  updatedAt            DateTime              @updatedAt
  paymentInstallments  PaymentInstallment[]
  transactions         PaystackTransaction[]
  secondPaymentDueDate DateTime?
  desiredStartDate     DateTime?

  @@unique([userId, courseId])
}

model User {
  id            String    @id @default(cuid())
  name          String
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?
  role          UserRole  @default(USER)
  accounts      Account[]
  access_token  String?

  phone_number String? @unique

  unlock_free_course_on_data_science Boolean @default(false)

  completed_videos  UserProgress[]
  ongoing_courses   String[] //return Ids
  completed_courses String[] //return Ids

  course_purchased     Purchase[]

  cohorts UserCohort[] // return userId, cohortId, cohort

  quiz_leaderboard Leaderboard[] // return an object[] of leaderboard for each quizId
  quiz_answers     UserQuizAnswer[]

  //Make adjustments based on courseId
  paymentStatus PaymentStatus[]
  inactive      Boolean         @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model UserCohort {
  id String @id @default(cuid())

  courseId String

  cohortId String
  cohort   Cohort @relation(fields: [cohortId], references: [id], onDelete: Cascade)

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  isPaymentActive Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  isActive      Boolean   @default(true)
  archivedAt    DateTime?
  previousEnrollmentId String?

  @@unique([userId, cohortId, courseId])
}

model Cohort {
  id   String @id @default(cuid())
  name String

  startDate DateTime  @default(now())
  endDate   DateTime?

  courseId String
  course   Course @relation(fields: [courseId], references: [id])

  users           UserCohort[] // return userId, user and cohortId
  cohortCourses   CohortCourse[]
  paymentStatuses PaymentStatus[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model CohortCourse {
  id       String @id @default(cuid())
  cohortId String
  cohort   Cohort @relation(fields: [cohortId], references: [id], onDelete: Cascade)
  courseId String
  course   Course @relation(fields: [courseId], references: [id], onDelete: Cascade)

  title       String
  description String? @db.Text
  price       String?
  imageUrl    String?

  course_duration               String?
  course_instructor_name        String?
  course_instructor_image       String?
  course_instructor_title       String?
  course_instructor_description String? @db.Text
  brochureUrl                   String?
  course_preview_video          String?

  cohortTimeTable   CohortCourseTimeTable[]
  cohortWeeks       CohortCourseWeek[]
  cohortModules     CohortCourseModule[]
  cohortVideos      CohortProjectVideo[]
  cohortAttachments CohortAttachment[]
  cohortQuizzes     CohortQuiz[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model CohortCourseTimeTable {
  id String @id @default(cuid())

  name     String
  category EventCategory
  date     DateTime

  cohortCourseId String
  cohortCourse   CohortCourse @relation(fields: [cohortCourseId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model CohortCourseWeek {
  id String @id @default(cuid())

  title   String
  iconUrl String?

  cohortCourseId String
  cohortCourse   CohortCourse @relation(fields: [cohortCourseId], references: [id], onDelete: Cascade)

  attachments   CohortAttachment[]
  cohortModules CohortCourseModule[]
  isPublished   Boolean              @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model CohortCourseModule {
  id String @id @default(cuid())

  title       String
  description String? @db.Text
  iconUrl     String?

  cohortCourseWeekId String
  cohortCourseWeek   CohortCourseWeek @relation(fields: [cohortCourseWeekId], references: [id], onDelete: Cascade)

  cohortProjectVideos CohortProjectVideo[]
  cohortQuizzes       CohortQuiz[]

  cohortCourseId String
  cohortCourse   CohortCourse @relation(fields: [cohortCourseId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model CohortProjectVideo {
  id String @id @default(cuid())

  title        String
  videoUrl     String?
  thumbnailUrl String?
  duration     String?

  cohortCourseModuleId String
  cohortCourseModule   CohortCourseModule @relation(fields: [cohortCourseModuleId], references: [id], onDelete: Cascade)

  cohortCourseId String
  cohortCourse   CohortCourse @relation(fields: [cohortCourseId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model CohortAttachment {
  id String @id @default(cuid())

  name String
  url  String?

  cohortCourseWeekId String
  cohortCourseWeek   CohortCourseWeek @relation(fields: [cohortCourseWeekId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  CohortCourse   CohortCourse? @relation(fields: [cohortCourseId], references: [id])
  cohortCourseId String?
}

model CohortQuiz {
  id String @id @default(cuid())

  question String

  cohortCourseModuleId String
  cohortCourseModule   CohortCourseModule @relation(fields: [cohortCourseModuleId], references: [id], onDelete: Cascade)

  cohortCourseId String?
  cohortCourse   CohortCourse? @relation(fields: [cohortCourseId], references: [id])

  cohortQuizAnswers CohortQuizAnswer[]

  originalQuizId String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model CohortQuizAnswer {
  id String @id @default(cuid())

  answer    String
  isCorrect Boolean

  cohortQuizId String
  cohortQuiz   CohortQuiz @relation(fields: [cohortQuizId], references: [id], onDelete: Cascade)

  originalAnswerId String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Purchase {
  id String @id @default(cuid())

  userId String
  user   User   @relation(fields: [userId], references: [id])

  courseId String
  course   Course @relation(fields: [courseId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Course {
  id String @id @default(cuid())

  title       String
  description String? @db.Text
  price       String?
  discount    String?
  imageUrl    String?

  slug String?

  course_duration                    String?
  course_instructor_name             String?
  course_instructor_image            String?
  course_instructor_title            String?
  course_instructor_description      String? @db.Text
  course_instructor_ratings          String?
  course_instructor_courses          String?
  course_instructor_lessons          String?
  course_instructor_hrs              String?
  course_instructor_students_trained String?

  brochureUrl          String?
  course_preview_video String?

  skills_you_will_learn SkillsYouWillLearn[]
  learning_Outcomes     LearningOutcome[]
  prerequisites         Prerequisite[]
  tags                  Tag[]
  catalog_header_tags   CatalogHeaderTags[]
  catalog_header_image  String?

  course_weeks  CourseWeek[]
  course_videos ProjectVideo[]
  purchases     Purchase[]

  timetable TimeTable[]

  cohorts              Cohort[]
  cohortCourses        CohortCourse[]
  paymentStatuses      PaymentStatus[]
  facilitators Facilitator[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model CourseWeek {
  id String @id @default(cuid())

  title   String
  iconUrl String?

  courseId String
  course   Course @relation(fields: [courseId], references: [id], onDelete: Cascade)

  attachments   Attachment[]
  courseModules Module[]
  isPublished   Boolean      @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Attachment {
  id String @id @default(cuid())

  name String
  url  String?

  courseWeekId String
  courseWeek   CourseWeek @relation(fields: [courseWeekId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Module {
  id String @id @default(cuid())

  title       String
  description String? @db.Text
  iconUrl     String?

  CourseWeek   CourseWeek @relation(fields: [courseWeekId], references: [id])
  courseWeekId String

  projectVideos ProjectVideo[]

  quizzes Quiz[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ProjectVideo {
  id String @id @default(cuid())

  title        String
  videoUrl     String?
  thumbnailUrl String?
  duration     String?

  moduleId     String
  courseModule Module @relation(fields: [moduleId], references: [id], onDelete: Cascade)

  courseId String
  course   Course @relation(fields: [courseId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model UserProgress {
  id String @id @default(cuid())

  videoId  String
  courseId String

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  isCompleted        Boolean   @default(false)
  progressPercentage Float     @default(0) // Track progress percentage
  lastWatched        DateTime? // Track when user last watched

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, videoId, courseId])
}

model Quiz {
  id String @id @default(cuid())

  question String
  answers  QuizAnswer[]

  moduleId     String
  courseModule Module @relation(fields: [moduleId], references: [id], onDelete: Cascade)

  leaderboards Leaderboard[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model QuizAnswer {
  id String @id @default(cuid())

  name String

  quizId String
  quiz   Quiz   @relation(fields: [quizId], references: [id], onDelete: Cascade)

  isCorrect Boolean @default(false)

  quizAnswers UserQuizAnswer[]
}

model UserQuizAnswer {
  id String @id @default(cuid())

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  quizAnswerId String
  quizAnswer   QuizAnswer @relation(fields: [quizAnswerId], references: [id], onDelete: Cascade)

  @@unique([userId, quizAnswerId])
}

model Leaderboard {
  id String @id @default(cuid())

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  quizId String
  quiz   Quiz   @relation(fields: [quizId], references: [id], onDelete: Cascade)

  points Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, quizId])
}

enum EventCategory {
  LESSON
  QUIZ
  ASSESSMENT
  PROJECT
  LIVE_CLASS
  BREAK
}

model TimeTable {
  id String @id @default(cuid())

  name     String
  category EventCategory
  date     DateTime?

  courseId String
  course   Course @relation(fields: [courseId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model PaystackTransaction {
  id               String         @id @default(cuid())
  transactionRef   String         @unique
  userId           String
  courseId         String
  paymentType String?  
  paymentPlan String?
  paymentStatusId  String?
  paymentStatus    PaymentStatus? @relation(fields: [paymentStatusId], references: [id])
  amount           String
  status           String
  paymentDate      DateTime?
  authorizationUrl String?
  metadata         String?        @db.Text
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt

  @@index([userId])
  @@index([courseId])
  @@index([status])
  @@index([createdAt])
}

model CatalogHeaderTags {
  id       String  @id @default(cuid())
  title    String
  imageUrl String?

  courseId String
  course   Course @relation(fields: [courseId], references: [id], onDelete: Cascade)
}

model LearningOutcome {
  id      String @id @default(cuid())
  content String @db.Text

  courseId String
  course   Course @relation(fields: [courseId], references: [id], onDelete: Cascade)
}

model Prerequisite {
  id      String @id @default(cuid())
  content String @db.Text

  courseId String
  course   Course @relation(fields: [courseId], references: [id], onDelete: Cascade)
}

model Tag {
  id      String @id @default(cuid())
  content String

  courseId String
  course   Course @relation(fields: [courseId], references: [id], onDelete: Cascade)
}

model SkillsYouWillLearn {
  id      String @id @default(cuid())
  iconUrl String

  courseId String
  course   Course @relation(fields: [courseId], references: [id], onDelete: Cascade)
}

model Blog {
  id        String      @id @default(cuid())
  title     String
  content   String      @db.Text
  images    BlogImage[]
  mins_read String?     @default("2 mins")
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
}

model BlogImage {
  id  String  @id @default(cuid())
  url String?

  blogId String
  blog   Blog   @relation(fields: [blogId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model FreeCourseApplication {
  id String @id @default(cuid())

  name  String
  email String
  phone String

  course_applied String @default("Data Science")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model MasterClassRegistration {
  id String @id @default(cuid())

  name       String
  email      String
  phone      String
  gender     String
  location   String
  heard_from String
  help_with  String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model sessions {
  id          String   @id @default(cuid())
  title       String
  description String?
  startTime   DateTime
  endTime     DateTime
  sessionLink String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([startTime])
  @@index([endTime])
  // Explicitly mapping to "sessions" table
  @@map("sessions")
}

model Facilitator {
  id          String   @id @default(cuid())
  name        String
  email       String   @unique
  phoneNumber String
  imageUrl    String?
  bio         String?
  title       String?
  
  courses     Course[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}